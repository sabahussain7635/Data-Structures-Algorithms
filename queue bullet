#include <iostream>
using namespace std;

// Node structure (bullet)
struct Node {
    int data;
    Node* next;
};

// Queue class using linked list
class Queue {
private:
    Node* front;
    Node* rear;

public:
    Queue() {
        front = rear = NULL;
    }

    // Insert (enqueue)
    void enqueue(int value) {
        Node* temp = new Node();   // create bullet
        temp->data = value;
        temp->next = NULL;

        if (rear == NULL) {        // queue empty
            front = rear = temp;
            return;
        }

        rear->next = temp;         // attach bullet at end
        rear = temp;               // update rear
    }

    // Delete (dequeue)
    int dequeue() {
        if (front == NULL) {
            cout << "Queue is empty!\n";
            return -1;
        }

        Node* temp = front;        // pick first bullet
        int value = temp->data;

        front = front->next;       // move front forward

        if (front == NULL)
            rear = NULL;           // queue empty after deletion

        delete temp;               // free bullet
        return value;
    }

    // Display queue
    void display() {
        Node* temp = front;
        cout << "Queue: ";
        while (temp != NULL) {
            cout << temp->data << " -> ";
            temp = temp->next;
        }
        cout << "NULL\n";
    }
};

int main() {
    Queue q;

    q.enqueue(10);
    q.enqueue(20);
    q.enqueue(30);

    q.display();

    cout << "Dequeued: " << q.dequeue() << endl;

    q.display();

    return 0;
}
